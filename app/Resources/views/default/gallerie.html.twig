{% extends 'layout.html.twig' %}

{% block contenu %}
<!-- Section: actualite -->
<section id="gallerie" class="home-section text-center">
    <div class="heading-about">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <div class="wow bounceInDown" data-wow-delay="0.2s">
                        <div class="section-heading">
                            <h2>{{ gallerie.name }}</h2>
                            <p class="subtitle">{{ gallerie.updatedAt|date('d/m/Y') }}</p>
                            <i class="fa fa-2x fa-angle-down"></i>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-2 col-lg-offset-5">
                <hr class="marginbot-50">
            </div>
        </div>
        <div class="row">
            {% set delay = 0.2 %}
            {% for galleryHasMedia in gallerie.galleryHasMedias %}

                <div class="col-md-6" data-wow-delay="{{ delay }}s">
                    {% media galleryHasMedia.media, 'middle' with {'sizes': '(min-width: 20em) 50vw, 100vw'} %}
                </div>

                {% set delay = delay + 0.2 %}

            {% endfor %}
        </div>
    </div>
</section>
<!-- /Section: actualite -->

{% endblock %}